{
  "name": "learningEnglishWordsApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "start-ios": "react-native run-ios --simulator='iPhone SE' && npm run lint-watch",
    "start-android": "react-native run-android && npm run lint-watch",
    "lint": "esw src/**",
    "lint-watch": "esw -w --changed src/**",
    "flow": "flow",
    "flow start": "flow start",
    "flow stop": "flow stop",
    "flow status": "flow status",
    "flow coverage": "flow coverage"
  },
  "precommit": "lint",
  "dependencies": {
    "@react-native-community/netinfo": "^3.2.1",
    "axios": "^0.18.0",
    "fuse.js": "^3.4.4",
    "lodash": "^4.17.11",
    "react": "16.8.3",
    "react-native": "0.59.8",
    "react-native-device-info": "^2.1.3",
    "react-native-fast-image": "^6.0.3",
    "react-native-gesture-handler": "^1.2.1",
    "react-native-navigation": "^2.21.0",
    "react-native-svg": "^9.4.0",
    "react-native-vector-icons": "^6.4.2",
    "react-navigation": "^3.11.0",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-axios-middleware": "^4.0.0",
    "sinon": "^7.3.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "7.4.4",
    "@types/jest": "^24.0.14",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.8.0",
    "babel-preset-airbnb": "^3.2.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "^4.0.1",
    "babel-root-slash-import": "^1.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-flowtype": "^3.11.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-native": "^3.7.0",
    "eslint-watch": "^5.1.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.98.1",
    "jest": "24.8.0",
    "jest-enzyme": "^7.0.2",
    "jest-fetch-mock": "^2.1.2",
    "jsdom": "^15.1.1",
    "metro-react-native-babel-preset": "0.54.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.1",
    "prettier-eslint": "^8.8.2",
    "react-dom": "^16.8.6",
    "react-native-mock-render": "^0.1.4",
    "react-test-renderer": "^16.8.3",
    "redux-mock-store": "^1.5.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>setup-tests.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?)$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "\\\\node_modules\\\\",
      "/mock/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/mock/",
      "/jest"
    ]
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  }
}
